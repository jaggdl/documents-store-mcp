<div class="">
  <div class="py-4 border-b border-gray-500">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold"><%= @document.title %></h1>
        <div class="mt-2 flex items-center text-sm">
          <span>Part of</span>
          <%= link_to @document.project.name,
          @document.project,
          class: "ml-1 font-medium hover:font-bold" %>
        </div>
      </div>
      <div>
        <%= link_to "Edit",
        edit_project_document_path(@document.project, @document),
        class: "px-4 py-2 bg-blue-600 text-white hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <div class="py-8">
    <div class="prose max-w-none lg:prose-lg font-sans dark:prose-invert">
      <%= @document.content_as_html %>
    </div>
  </div>

  <div class="mt-8">
    <div class="py-4 border-b border-gray-500">
      <h2 class="text-lg font-medium">Related Documents</h2>
    </div>
    <div class="py-4">
      <%= render "documents_table", documents: @related_documents %>
    </div>
  </div>

  <div class="mt-8">
    <div class="py-4 border-b border-gray-500">
      <h2 class="text-lg font-medium">Other Documents in
        <%= @document.project.name %></h2>
    </div>
    <div class="py-4">
      <%= render "documents_table", documents: @document.project_other_documents %>
    </div>
  </div>

  <div class="mt-8 text-center">
    <%= link_to "← Back to #{@document.project.name}",
    @document.project,
    class:
      "inline-flex items-center px-4 py-2 border-b border-l hover:border-l-4 transition-all border-gray-500 text-sm font-medium" %>
  </div>
</div>
