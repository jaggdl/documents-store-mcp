<div class="space-y-8">
  <h1 class="text-3xl font-bold">New Document</h1>
  
  <%= form_with model: [@project, @document], local: true, class: "space-y-6" do |form| %>
    <% if @document.errors.any? %>
      <div class="border border-red-500 px-4 py-3 bg-red-50 dark:bg-red-900/20">
        <h3 class="font-bold text-red-700 dark:text-red-400">Please fix the following errors:</h3>
        <ul class="mt-2 text-sm text-red-600 dark:text-red-300">
          <% @document.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-6">
      <div class="space-y-4" data-controller="project-option">
        <h2 class="text-2xl font-bold">Project</h2>
        
        <div class="space-y-3">
          <label class="flex items-center space-x-2">
            <input type="radio" name="project_option" value="existing" id="existing_project" class="form-radio" checked data-action="change->project-option#toggle">
            <span class="text-lg">Use existing project</span>
          </label>
          
          <div data-project-option-target="existingSection" class="pl-6 space-y-2">
            <label class="block text-sm font-medium">Select Project</label>
            <select name="project_id" class="w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
              <% @projects.each do |project| %>
                <option value="<%= project.id %>" <%= 'selected' if @project&.id == project.id %>>
                  <%= project.name %>
                </option>
              <% end %>
            </select>
          </div>
        </div>

        <div class="space-y-3">
          <label class="flex items-center space-x-2">
            <input type="radio" name="project_option" value="new" id="new_project" class="form-radio" data-action="change->project-option#toggle">
            <span class="text-lg">Create new project</span>
          </label>
          
          <div data-project-option-target="newSection" class="pl-6 space-y-4 hidden">
            <div class="space-y-2">
              <label class="block text-sm font-medium">Project Name</label>
              <input type="text" name="project[name]" class="w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            
            <div class="space-y-2">
              <label class="block text-sm font-medium">Project Description</label>
              <textarea name="project[description]" rows="3" class="w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
          </div>
        </div>
      </div>

      <div class="border-b border-gray-500"></div>

      <div class="space-y-4">
        <h2 class="text-2xl font-bold">Document</h2>
        
        <div class="space-y-2">
          <%= form.label :title, class: "block text-sm font-medium" %>
          <%= form.text_field :title, class: "w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="space-y-2">
          <%= form.label :content, class: "block text-sm font-medium" %>
          <%= form.text_area :content, rows: 12, class: "w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Write your document content in Markdown..." %>
        </div>
      </div>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Create Document", class: "px-4 py-2 bg-blue-600 text-white hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= link_to "Cancel", @project ? project_path(@project) : projects_path, class: "px-4 py-2 border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>