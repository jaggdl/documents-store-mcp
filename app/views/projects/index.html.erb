<div class="min-h-screen bg-gray-50">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Projects</h1>
      <p class="mt-2 text-gray-600">Manage your projects and documents</p>
    </div>

    <div class="mb-6">
      <%= link_to "New Project", new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

    <div class="space-y-6">
      <% @projects.each do |project| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-xl font-semibold text-gray-900">
                  <%= link_to project.name, project, class: "hover:text-indigo-600" %>
                </h2>
                <p class="mt-1 text-sm text-gray-600"><%= project.description %></p>
              </div>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  <%= pluralize(project.documents.count, 'document') %>
                </span>
                <div class="flex space-x-1">
                  <%= link_to "View", project, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
                  <%= link_to "Edit", edit_project_path(project), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
                  <%= link_to "Delete", project, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900 text-sm font-medium" %>
                </div>
              </div>
            </div>
          </div>
          
          <% if project.documents.any? %>
            <div class="px-6 py-4">
              <h3 class="text-sm font-medium text-gray-700 mb-3">Documents</h3>
              <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-3">
                <% project.documents.each do |document| %>
                  <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition-colors">
                    <h4 class="font-medium text-gray-900">
                      <%= link_to document.title, document, class: "hover:text-indigo-600" %>
                    </h4>
                    <p class="mt-1 text-sm text-gray-600 line-clamp-2">
                      <%= document.content_preview(100) %>
                    </p>
                    <div class="mt-2 flex space-x-2">
                      <%= link_to "View", document, class: "text-xs text-indigo-600 hover:text-indigo-900 font-medium" %>
                      <%= link_to "Edit", edit_project_document_path(project, document), class: "text-xs text-gray-600 hover:text-gray-900 font-medium" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="px-6 py-4 text-center text-gray-500">
              <p>No documents yet.</p>
              <%= link_to "Add first document", new_project_document_path(project), class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @projects.empty? %>
      <div class="text-center py-12">
        <div class="mx-auto max-w-md">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No projects</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating your first project.</p>
          <div class="mt-6">
            <%= link_to "New Project", new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>